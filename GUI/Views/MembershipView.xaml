<UserControl x:Class="GUI.Views.MembershipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel 
            Orientation="Vertical">
            <TextBlock
                Text="Membership function:"
                HorizontalAlignment="Left"
                Margin="0 20 0 20"/>

            <ComboBox
                SelectedItem="{Binding MembershipType}"
                ItemsSource="{Binding MEMBERSHIP_TYPES}"
                materialDesign:HintAssist.Hint="Type"
                HorizontalAlignment="Left"
                Width="100"
                Margin="0 0 0 20"/>

            <TextBox 
                Width="200"
                Margin="0 0 0 20"
                materialDesign:HintAssist.Hint="Parameters"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding ParameterString}"/>


        </StackPanel>     
    </Grid>
</UserControl>
